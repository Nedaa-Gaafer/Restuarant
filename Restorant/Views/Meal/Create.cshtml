@using Restorant.DTOs.MenuItemDtos
@using Restorant.ViewModels
@model CreateMenuItemDto

@{
    SelectList Categories = new(Model.Categories, "Id", "Name");
}



<style>
    input {
        margin-top: 5px;
        margin-bottom: 15px;
        display: inline-block;
        width: 100%;
    }
</style>
<div style="width:400px">
    <form class="form" asp-action="Create" method="post">
        <h3>Add New Meal in Menu</h3>
        <br />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" placeholder="Enter product name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" placeholder="Enter product price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" placeholder="Enter product price">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <br />
            <textarea asp-for="Description" type="text" placeholder="Enter product description" style="width:100%"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br>
        <div>
            <label asp-for="CategoryId">Category</label>
            <br />
            <select asp-for="CategoryId" class="form-control" asp-items="Categories">
                <option value="0">--Select Category--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">AddMeal</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

            