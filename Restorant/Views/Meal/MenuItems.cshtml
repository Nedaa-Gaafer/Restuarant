@using Restorant.DTOs.MenuItemDtos
@model List<MenuItemDto>
<style>
    .cat_img {
        padding-left: 0px;
        padding-right:0px;
        height: 200px;
    }
    .card
    {
        padding-left: 0px;
        padding-right: 0px;
        color:black;
        padding-bottom:20px;

    }

    .btn-dark
    {
        background-color: #df5f04;
        border-color:none;
        margin-top:10px;
    }
    </style>
<section id="all_card" class="container text-center " style="margin-top:150px;margin-bottom:350px">
    <div class=" row row-cols-2 row-cols-sm-3 row-cols-md-4 g-2 gx-5 p-2  justify-content-between" id="cards_row">
        @foreach (var item in Model)
        {
            <div class="card col">
                <img src="~/images/@item.ImageUrl" class="img-fluid cat_img" width="100%" />
                <div style="margin-left:10px; text-align:left">
                    <h4 style="margin-top: 20px">@item.Name</h4>
                    <h5 style="margin-top: 20px">Price:@item.Price EGP</h5>
                    <div style="text-align:center"><a asp-action="Cart" asp-controller="Cart" asp-route-id="@item.Id" class="btn btn-dark">More Details</a></div>
                </div>
            </div>

        }

</section>