@using Restorant.DTOs.UserDtos
@model UserRegister


<style>
    input {
        margin-top: 5px;
        margin-bottom: 15px;
        display: inline-block;
        width: 100%;
    }
</style>
<div style="width:400px">
    <form class="form" asp-action="Register" method="post">
        <h3>Add New Meal in Menu</h3>
        <br />
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" placeholder="Enter product name">
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" placeholder="Enter product price">
            <span asp-validation-for="Address"></span>
            </div>
        
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" placeholder="Enter product price">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" placeholder="Enter product price">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" placeholder="Enter product price">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}