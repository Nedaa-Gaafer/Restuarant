@using Restorant.DTOs.UserDtos
@model UserRegister


<style>
    input {
        margin-top: 5px;
        margin-bottom: 15px;
        display: inline-block;
        width: 100%;
        padding: 10px
    }

    .form-group {
        margin-bottom: 20px;
        width: 400px;
    }
</style>
<div style="margin-top:50px;padding-top:60px;background-color:black; width:100%">
    <form class="form" asp-action="RoleRegister" method="post" style="justify-items:center;padding-bottom:50px ;color: #df5f04;">
        <h3>SignIn</h3>
        <br />
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" placeholder="Enter UserName">
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" placeholder="Enter your Address">
            <span asp-validation-for="Address"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" placeholder="Enter your Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" placeholder="Enter Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" placeholder="Confirm Password">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group" style="text-align:center">
            <button type="submit" class="btn" style="background-color: #df5f04; padding:10px 40px 10px 40px">SignIn</button>
        </div>
        <div>
            <a asp-action="RoleLogin" style="color:  #df5f04; ">If you already have account click here to LoginIn</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}