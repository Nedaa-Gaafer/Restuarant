@using Restorant.DTOs.UserDtos
@model Role

<style>
    .form-group
    {
        margin-bottom:20px;
        width: 400px;
        
    }

    .input{
        background-color:wheat
    }
</style>
<section class="" style="margin-top:50px;padding-top:100px;background-color:black">
    
    <form asp-action="AddRole" style="justify-items:center;padding-bottom:50px ;color: #df5f04;">
        <h2>Login</h2>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="AddRole" class="btn " style="background-color: #df5f04; padding:10px" />
                </div>
                <div>
                     <a asp-action="RoleRegister" style="color:  #df5f04">If you have not account click here to SingIn</a>
                </div>

            </form>
       
   
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
