@using Restorant.DTOs.CategoryDtos
@model List<GetAllCategoriesDto>
<style>
    .cat_img 
    {
        padding-left: var(--bs-gutter-x, 0rem);
        padding-right: var(--bs-gutter-x, 0rem);
        height: 200px;
        border-radius:5px;

        
    }
    article
    {
        position:absolute;
        width:100%
    }
    .opa_art
    {
        background-color:black; 
        opacity:.6;
        text-align: center;
        align-items:center;
    }

    .row {
        --bs-gutter-x: 0 !important;
    }

    .cat{
        margin-right:20px;
        width:300px;
        height: 250px;
        text-align: center;
        color: #df5f04;
    }

   
</style>

<section style="position:relative">
    <section style="margin-top:50px">
        <article class="index_carousel">
            <div id="carouselExampleSlidesOnly" class="carousel slide " data-bs-ride="carousel" style="height:200px">
                <div class="carousel-inner">
                    @* <div class="carousel-item active">
                    <img src="~/images/back2.jpg" class="d-block w-100" alt="...">
                </div> *@
                    <div class="carousel-item active ">
                        <img src="~/images/back3.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/back1.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>
        </article>
        <article class="opa_art index_carousel" style="">
            <h2 class="opa" style="color:#df5f04">Welcom in My Restaurant </h2>
        </article>
        <hr />
        <br />
    </section>
    @* <partial name="ItemCardView"  model="@Model"/>  *@

    <section class="container-fluid" style="margin-top:300px;text-align:center;padding-top:150px;justify-content:center;width:100%; position:relative; display:flex ;background-color:#ebd7cf">
     <div class=" row row-cols-2 row-cols-sm-3 row-cols-md-4 g-2 gx-5 p-2  justify-content-between" id="cards_row">
        @foreach (var item in Model)
        {
            <div class=" col cat">
                <a asp-action="CategoryItems" asp-controller="Meal" asp-route-id="@item.Id">
                    <img src="~/images/@item.ImageUrl" class="img-fluid cat_img " width="100%">
                </a>
                <br />
                <h5 style="margin-top:10px">@item.Name</h5>

            </div>
        }
     </div>
    </section>
</section>