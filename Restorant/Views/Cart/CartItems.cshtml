@using Restorant.DTOs.CartDtos
@model IEnumerable<AddOrderItem>
<style>
        .item
        {
            height: 100px;
            display: flex;
            margin-top: 10px;
            justify-content:flex-start;
            border: 1px solid #e5dbdb;
            background-color: #fffefc;
            width: 80%;
        }

      
        p{
            margin-left:5%
        }
        
</style>
<section class="container" style="margin-top:200px; margin-bottom:100px">
    @foreach (var meal in Model)
    {
        <div class="item" style="">
            <img src="~/images/@meal.ImageUrl" width="100px" style="margin-right:5%">
            <div style="padding-top:20px;width:70%; display:flex; justify-content:space-evenly">
                <h4>@meal.Name</h4>
                
            <p>
                    <span class="Quan"><a asp-action="DecreaseQantity" asp-controller="Cart" asp-route-id="@meal.MenuItemId" style="color:white"><i class="bi bi-dash-square" style="color:black"></i></a></span>
                     <span> Quantity: @meal.Quantity</span>
                    <span class="Quan"><a asp-action="Cart" asp-controller="Cart" asp-route-id="@meal.MenuItemId" style="color:white"><i class="bi bi-plus-square" style="color:black"></i></a></span>
            </p>
            <h6>Price:@meal.Price</h6>
            </div>
        </div>

       

    }
    <div style="text-align:center">
        <h6 style="border: 1px solid #e5dbdb;padding:20px;margin-top:10px; background-color: #fffefc;width: 80%;">
            class="bi bi-plus-square"
            Total Price = @ViewBag.totalPrice
            <br />
            Total Price After Discount = @ViewBag.dicount
        </h6>
        </div>
</section>